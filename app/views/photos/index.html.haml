- title "Photos"

%table
  %tr
    %th Name
    %th Description
    %th Album
    %th Image file name
    %th Image content type
    %th Image file size
  - for photo in @photos
    %tr
      %td= h photo.name
      %td= h photo.description
      %td= h photo.album.name if photo.album
      %td= h photo.image_file_name
      %td= h photo.image_content_type
      %td= h photo.image_file_size
      %td= link_to 'Show', resource_path(photo)
      %td= link_to 'Edit', edit_resource_path(photo)
      %td= link_to 'Destroy', resource_path(photo), :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Photo", new_resource_path
