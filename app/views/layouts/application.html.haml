!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    - stylesheet_link_tag 'blueprint/screen'
    - stylesheet_link_tag 'blueprint/print', :media => 'print'
    /[if IE]
      - stylesheet_link_tag 'blueprint/ie.css'
    = stylesheet_link_tag 'reset', 'welcome', 'gritter', 'uploadify'
    = javascript_include_tag 'jquery.min', 'jquery.gritter'
    = yield(:head)
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
  
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :style => 'display:none'
      
      - if show_title?
        %h1=h yield(:title)
      
      = yield
