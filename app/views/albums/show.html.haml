- title "Album"

%p
  %strong Name:
  =h @album.name
%p
  %strong Description:
  =h @album.description
%p
  %strong Location:
  = link_to h(@album.location.name), @album.location if @album.location

%p
  = link_to "Edit", edit_album_path(@album)
  |
  = link_to "Destroy", @album, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", albums_path
