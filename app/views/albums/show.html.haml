- javascript 'jquery.galleria.min', 'galleria'
- stylesheet 'galleria'

%h1= @album.name
%h2= @album.description
    
#main_image

%ul.gallery
  - for photo in @album.photos
    %li= "<a href='#{photo.image.url(:large)}' title='A caption'><img src='#{photo.image.url(:thumb)}' alt='Image01'></a></li>"
    
%p.nav
  <a href="#" onclick="$.galleria.prev(); return false;">&laquo; previous</a> | <a href="#" onclick="$.galleria.next(); return false;">next &raquo;</a>

%h1 Comments

.comments
  - for comment in @album.comments do
    .comment
      .text
        %p= comment.text
      .meta
        %p
          = comment.user.name if comment.user
          \-
          = time_ago_in_words comment.created_at
          ago
      %hr

- form_for @album.comments.new, :url => album_comments_path(@album) do |f|
  %p= f.text_field :user_name
  %p= f.text_area :text
  %p= f.submit "Say"

.actions
  %p= link_to "Add photos to album", new_album_photo_path(@album)
  %p= link_to "Edit photos of the album", album_photos_path(@album)  
  %p= link_to "Customize this album", edit_resource_path
  %p= link_to "Back to list of albums", collection_path
  %p= link_to 'Delete this album', resource_path, :confirm => 'Are you sure?', :method => :delete