- title "Albums"

%table
  %tr
    %th Name
    %th Description
    %th Location
    %th User    
  - for album in @albums
    %tr
      %td= h album.name
      %td= h album.description
      %td= link_to 'Show', album
      %td= link_to 'Edit', edit_album_path(album)
      %td= link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Album", new_album_path
